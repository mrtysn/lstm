#:kivy 1.9.1

<LstmGate>:
	canvas:
		Color:
			rgba: self.r, self.g, self.b, 1
		Rectangle: 
			pos: self.pos
			size: self.size

	Label:
		id: ch
		font_size: 20
		right: root.right + 37
		top: root.top + 30
		text: root.ch
		
<MyLabel@Label>:
	#font_size: self.height/2
	font_size: 40
	
	halign: 'center'
	valign: 'middle'


<LstmCell>:
	z_gate: z
	i_gate: i
	f_gate: f
	o_gate: o
	
	c_gate: c
	h_gate: h

	canvas.before:
		Color: 
			rgba: 1, 1, 1, .2
		Rectangle: 
			pos: self.pos
			size: root.size

	GridLayout:
		size: root.size
		pos: root.pos
		rows: 3
		cols: 5
		padding: 10
		spacing: 10

		Widget
		LstmGate:
			id: i
		Widget
		LstmGate:
			id: o
		Widget

		LstmGate:
			id: z
		Widget
		LstmGate:
			id: c
		Widget
		LstmGate:
			id: h

		Widget
		Widget
		LstmGate:
			id: f
		Widget
		Widget
